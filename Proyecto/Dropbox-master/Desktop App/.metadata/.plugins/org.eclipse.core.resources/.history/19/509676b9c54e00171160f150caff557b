package Sockets;

import java.net.*;

public class DSocket {

	private DatagramSocket ds;
	private int port;
	
	public DSocket ( int port ) {
		
		this.port = port;
		
	} // End constructor.
	
	public void setSocket ( ) throws SocketException {
		
		this.ds = new DatagramSocket ( this.port );
		
	} // End method.
	
	public DatagramSocket getSocket ( ) {
		
		return this.ds;
	
	} // End getter.
	
	public int getPort ( ) {
		
		return this.port;
		
	} // End getter.
	
} // End class.
